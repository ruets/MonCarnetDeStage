{% extends 'base.html.twig' %}
{% block title %}Offre{% endblock %}
  
{% block body %}

    {% for offre in offresByCompte %}
        {% if offre.offre.id == id %}
            <div class="une_annonce annonce_container">
                <div class="annonce_ligne1">
                    <div class="etat">
                        {% if offre.offre.etatOffre.id == 1 %}
                        <div class="cercle-offre" style="background: green;"></div>
                        {% elseif offre.offre.etatOffre.id == 2 %}
                            <div class="cercle-offre" style="background: orange;"></div>
                        {% elseif offre.offre.etatOffre.id == 3 %}
                            <div class="cercle-offre" style="background: red;"></div>
                        {% endif %}
                    <label for="">{{ offre.offre.etatOffre.etat }}</label>
                    </div>
                    
                    <span class="favoris">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star" viewBox="0 0 16 16">
                        <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z"/>
                        </svg>
                    </span>
                </div>

                    <h1>{{ offre.offre.entreprise.raisonSociale}}<h1>
                    <h2>{{ offre.offre.intitule }}</h2>
   

                <div class="contenu_annonce">
                    <p>{{ offre.offre.descriptif }}</p>
                    <div class="annonce_ligne2">
                        <p class="annonce_company">{{offre.offre.entreprise.pays }}</p>
                        <p class="annonce_date">{{offre.offre.entreprise.ville}}</p>
                    </div>

                    <div class="annonce_ligne3">
                        <p class="annonce_date" data-order="{{ offre.offre.dateDepot ? offre.offre.dateDepot|date('Y-m-d') : '' }}">{{ offre.offre.dateDepot ? offre.offre.dateDepot|date('d/m/Y') : '' }}</p>
                        <p class="annonce_date">{{ offre.offre.parcours }}</p>
                    </div>
                </div>

                <div class="annonce_button">
                    <a href="{{ offre.offre.urlPieceJointe }}">
                        <button class="button-candidater">Candidater</button>
                    </a>
                </div>
            </div>


        {% endif %}
    {% endfor %}

{% endblock %}