{% extends 'base.html.twig' %}

{% block title %}Offre{% endblock %}

{% block body %}
    <button onclick="window.history.back();" class="btn btn-primary top-0 start-0 m-3"><i class="fa fa-arrow-left"></i> Retour</button>
    <h1 style="display: flex; justify-content: center;">Offre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ offre.id }}</td>
            </tr>
            <tr>
                <th>Intitule</th>
                <td>{{ offre.intitule }}</td>
            </tr>
            <tr>
                <th>Descriptif</th>
                <td>{{ offre.descriptif }}</td>
            </tr>
            <tr>
                <th>DateDepot</th>
                <td>{{ offre.dateDepot ? offre.dateDepot|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Parcours</th>
                <td>{{ offre.parcours }}</td>
            </tr>
            <tr>
                <th>MotsCles</th>
                <td>{{ offre.motsCles }}</td>
            </tr>
            <tr>
                <th>UrlPieceJointe</th>
                <td>{{ offre.urlPieceJointe }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-center">
    <a href="{{ path('app_offre_edit', {'id': offre.id}) }}" class="btn btn-primary col-md-1">Editer</a>
    </div>

    {{ include('Admin/offre/_delete_form.html.twig') }}
{% endblock %}
