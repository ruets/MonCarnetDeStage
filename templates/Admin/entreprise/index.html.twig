{% extends 'base.html.twig' %}

{% block title %}Entreprise index{% endblock %}

{% block body %}
    <h1>
        Entreprises
        <div class="btn_ajouter" style="display: block ruby; text-align: center;"> 
        <a  class="btn btn-primary btn-sm" href="{{ path('app_entreprise_new') }}" style="padding:10px;"><i class="fa fa-plus"></i> Ajouter une entreprise</a>
        </div>
    </h1>

    <table class="MyDataTable  table table-striped table-sm table-hover small">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>RaisonSociale</th>
                <th>Ville</th>
                <th>Pays</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entreprise in entreprises %}
            <tr>
                <td>{{ "%03d"|format(entreprise.id) }}</td>
                <td>{{ entreprise.raisonSociale }}</td>
                <td>{{ entreprise.ville }}</td>
                <td>{{ entreprise.pays }}</td>
                <td>
                    <a href="{{ path('app_entreprise_show', {'id': entreprise.id}) }}">voir</a>
                    <a href="{{ path('app_entreprise_edit', {'id': entreprise.id}) }}">éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
