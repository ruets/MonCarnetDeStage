{% extends 'base.html.twig' %}

{% block title %}Candidature{% endblock %}

{% block body %}
    <h1>Candidature</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ candidature.id }}</td>
            </tr>
            <tr>
                <th>TypeAction</th>
                <td>{{ candidature.typeAction }}</td>
            </tr>
            <tr>
                <th>DateAction</th>
                <td>{{ candidature.dateAction ? candidature.dateAction|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_candidature_index') }}" class="btn btn-secondary col-md-1">Retour Liste</a>

    <a href="{{ path('app_candidature_edit', {'id': candidature.id}) }}" class="btn btn-primary col-md-1">Editer</a>

    {{ include('Admin/candidature/_delete_form.html.twig') }}
{% endblock %}
